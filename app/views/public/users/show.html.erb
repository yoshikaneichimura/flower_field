<div class = "container" >

  <div class = "row" >

    <div class = "col-lg-4" >

      <%= render 'public/post_images/list' ,user: @user %>

      <!--follow機能-->

      <% if current_user != @user %>

        <% if current_user.following? (@user) %>
          <p><%= link_to "unfollow",public_relationship_path(@user.id),method: :delete,class: "btn btn-danger" %></p>
        <% else %>
          <p><%= link_to"follow", public_relationships_path(@user.id),method: :post,class: "btn btn-primary" %></p>
        <% end %>

      <% end %>

      <p><strong><%= @user.followings.count %></strong> follow <strong><%= @user.followers.count %></strong> follower</p>

      <p class = "mx-3"><%= link_to"follow list",public_relationships_followings_path(@user.id),class: "btn btn-primary" %>   <%= link_to"follower list",public_relationships_followers_path(@user.id) ,class: "btn btn-primary"%></p>

    </div>
      <!--follow機能-->

    <div class = "col-lg-8" >

      <%= render 'public/post_images/post',post_images: @post_images %>

    </div>

  </div>

</div>