<h1>Public::Users#show</h1>
<p>Find me in app/views/public/users/show.html.erb</p>

<%= render 'public/post_images/list' ,user: @user %>

<!--follow機能-->
<div>

<% if current_user != @user %>

  <% if current_user.following? (@user) %>
    <%= link_to "unfollow",public_relationship_path(@user.id),method: :delete %>
  <% else %>
    <%= link_to"follow", public_relationships_path(@user.id),method: :post %>
  <% end %>

<% end %>

<p><strong><%= @user.followings.count %></strong> follow <strong><%= @user.followers.count %></strong> follower</p>

<%= link_to"follow list",public_relationships_followings_path(@user.id) %>
<%= link_to"follower list",public_relationships_followers_path(@user.id) %>

</div>
<!--follow機能-->

<div>
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Flower</th>
        <th>Field</th>
        <th>Day</th>
        <th>Area</th>
        <th>Review</th>
        <th>User</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <% @post_images.each do |post_image|%>
      <tr>
        <td><%= link_to public_post_image_path(post_image.id) do %>
              <%= image_tag post_image.get_image(100,100) %>
            <% end %>
        </td>
        <td><%= post_image.flower %></td>
        <td><%= post_image.field %></td>
        <td><%= post_image.day %></td>

        <td><% post_image.tags.each do |tag|%>
              <%= tag.area %>
            <% end %>
        </td>
        <td>
          <div id="star-rate<%= post_image.id %>"></div>

            <script>
              $(function(){
                $('#star-rate<%= post_image.id %>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>' ,
                  half      : false,
                  readOnly  : true,
                  score: <%= post_image.star %>,
                });
              });
            </script>
        </td>
        <td><%= post_image.user.name %></td>
        <td><%= link_to "#{post_image.post_comments.count}コメント",public_post_image_path(post_image.id)%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>