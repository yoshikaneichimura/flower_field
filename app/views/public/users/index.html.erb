<div class = "container" >

  <h3 class = "mt-3">Users</h3>

  <div class = "row" >

    <div class = "col-lg-4" >

      <%= render 'public/post_images/list',user: @user %>

    </div>

    <div class = "col-lg-8" >

      <table class = "table table-dark" >
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Introduction</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= link_to public_user_path(user.id) do %>
                  <%= image_tag user.get_profile_image(100,100) %>
                <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
            <td>
              <strong><%= user.followings.count %></strong> follow
              </br>
              <strong><%= user.followers.count %></strong> follower
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>

    </div>

  </div>

</div>