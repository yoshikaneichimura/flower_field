<h1>Public::Users#index</h1>
<p>Find me in app/views/public/users/index.html.erb</p>

<h3>Users</h3>

<div>
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Introduction</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50)%></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to'詳細',public_user_path(user.id )%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
