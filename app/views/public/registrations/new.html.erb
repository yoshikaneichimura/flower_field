<div class = "container">

  <div class = "row">

    <div class = "mx-auto mt-5">

      <h3 style="font-family: 'Comfortaa', cursive; font-weight:600;">User sign up</h3>

      <%= form_with model: @user,url: user_registration_path,id:'new_user',class: 'new_user' do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "Sign up",class: "btn btn-success"  %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>

    </div>

  </div>

  <div class = "row" >
    <div class = "mx-auto mt-5">
      <p><%= link_to'ゲストログインはこちら',public_homes_guest_sign_in_path, method: :post ,class: "btn btn-primary btn-lg" %></p>
    </div>
  </div>

</div>
