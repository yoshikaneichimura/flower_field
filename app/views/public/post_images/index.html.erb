<h1>Public::PostImages#index</h1>
<p>Find me in app/views/public/post_images/index.html.erb</p>

<h3>All Flower Field</h3>

<%= form_tag public_post_images_path, method: :get, class: 'boards_searchForm' do %>
  <%= select_tag :tag_id,
  options_from_collection_for_select(Tag.all,:id,:area,params[:tag_id]),
  {
    prompt: 'エリアで絞り込み検索',
    onchange: 'submit(this.form);'
  } %>

  <% end %>

<div>
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Flower</th>
        <th>Field</th>
        <th>Day</th>
        <th>Area</th>
        <th>User</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @post_images.each do |post_image|%>
      <tr>
        <td></td>
        <td><%= post_image.flower %></td>
        <td><%= post_image.field %></td>
        <td><%= post_image.day %></td>
        <td><% post_image.tags.each do |tag|%>
              <%= tag.area %>
            <% end %>
        </td>
        <td><%= post_image.user.name %></td>
        <td><%= link_to'詳細',public_post_image_path(post_image.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>