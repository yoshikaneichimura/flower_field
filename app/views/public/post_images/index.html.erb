<%= form_tag public_post_images_path, method: :get, class: 'boards_searchForm' do %>
  <%= select_tag :tag_id,
  options_from_collection_for_select(Tag.all,:id,:area,params[:tag_id]),
  {
    prompt: 'エリアで絞り込み検索',
    onchange: 'submit(this.form);'
  } %>

  <% end %>

