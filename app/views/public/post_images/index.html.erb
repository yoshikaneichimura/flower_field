<div class = "container">

  <div class = "row">

    <div class = "col-lg-4">

      <%= render 'list',user: @user %>

    </div>

    <div class = "col-lg-8">

      <div class = "mt-3">

        <h3 style="font-family: 'Comfortaa', cursive; font-weight:600;">All Flower Field</h3>

        <% if flash[:notice] %>
        <p id = "notice">
          <%= flash[:notice] %>
        </p>
        <% end %>

        <p><%= form_tag public_post_images_path, method: :get, class: 'boards_searchForm' do %></p>
          <p><%= select_tag :tag_id,
          options_from_collection_for_select(Tag.all,:id,:area,params[:tag_id]),
          {
            prompt: 'エリアで絞り込み検索',
            onchange: 'submit(this.form);'
          } %></p>

          <% end %>

        <%= render 'post',post_images: @post_images %>

      </div>

    </div>

  </div>

</div>

